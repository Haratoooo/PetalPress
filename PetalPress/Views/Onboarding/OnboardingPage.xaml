<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PetalPress.ViewModels"
             x:Class="PetalPress.Views.Onboarding.OnboardingPage"
             x:DataType="viewModels:OnboardingViewModel"
             BackgroundColor="Transparent">

    <Grid>
        <CarouselView ItemsSource="{Binding OnboardingItems}" x:Name="OnboardingCarousel">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Source="{Binding Illustration}" Aspect="AspectFill" Opacity="0.1"/>
                        <StackLayout Padding="30" VerticalOptions="Center">
                            <Label Text="{Binding Title}" FontSize="32" FontAttributes="Bold"/>
                            <Label Text="{Binding Description}" FontSize="18" Margin="0,10,0,0"/>
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <Button Text="Let’s Get Started"
                Command="{Binding GetStartedCommand}"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="20,0,20,40"
                BackgroundColor="White"
                TextColor="Black"
                CornerRadius="25"/>
    </Grid>
</ContentPage>
